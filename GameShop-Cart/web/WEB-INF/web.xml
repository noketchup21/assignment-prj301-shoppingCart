<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>controller.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gameSearchServlet</servlet-name>
        <servlet-class>controller.gameSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shoppingCartController</servlet-name>
        <servlet-class>controller.shoppingCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>gameController</servlet-name>
        <servlet-class>controller.gameController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>gameSearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCartController</servlet-name>
        <url-pattern>/shoppingCartController</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>gameController</servlet-name>
        <url-pattern>/gameController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>loginPage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
